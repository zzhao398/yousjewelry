.page {
  padding: 24rpx;
}

.loading {
  text-align: center;
  margin-top: 200rpx;
  color: #999;
}

.header {
  margin-top: 40rpx;
  display: flex;
  align-items: baseline;
}

.name {
  font-size: 40rpx;
  font-weight: 600;
  margin-right: 16rpx;
}

.role {
  font-size: 24rpx;
  color: #07c160;
}

.sub {
  margin-top: 8rpx;
  color: #666;
  font-size: 26rpx;
}

.status {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #999;
}

.status-ok {
  color: #07c160;
}

.status-error {
  color: #fa5151;
}

.section {
  margin-top: 32rpx;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.section-title {
  padding: 20rpx 24rpx 0 24rpx;
  font-size: 24rpx;
  color: #999;
}

.cell {
  padding: 28rpx 24rpx;
  border-top: 1px solid #f5f5f5;
  font-size: 28rpx;
}
