/* pages/orders/detail/index.wxss */

.page {
    background-color: #f7f7f7;
    min-height: 100vh;
    padding: 24rpx;
  }
  
  .loading {
    text-align: center;
    margin-top: 60rpx;
    color: #888;
    font-size: 26rpx;
  }
  
  .card {
    background-color: #ffffff;
    border-radius: 16rpx;
    padding: 24rpx 28rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  }
  
  .card-header {
    padding-bottom: 20rpx;
  }
  
  .card-title {
    font-size: 28rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
    color: #333;
  }
  
  /* 顶部订单信息 */
  
  .order-id-row {
    flex-direction: row;
    display: flex;
    align-items: baseline;
    margin-bottom: 12rpx;
  }
  
  .label {
    font-size: 26rpx;
    color: #666;
  }
  
  .order-id {
    font-size: 32rpx;
    font-weight: 600;
    color: #111;
    margin-left: 8rpx;
  }
  
  .order-sub-row {
    flex-direction: row;
    display: flex;
    margin-bottom: 6rpx;
  }
  
  .sub-label {
    font-size: 24rpx;
    color: #999;
  }
  
  .sub-text {
    font-size: 24rpx;
    color: #666;
    margin-left: 8rpx;
  }
  
  .tag-row {
    margin-top: 20rpx;
    flex-direction: row;
    display: flex;
  }
  
  .status-tag {
    padding: 6rpx 20rpx;
    border-radius: 999rpx;
    font-size: 22rpx;
    margin-right: 16rpx;
  }
  
  /* 状态颜色 */
  
  .tag-green {
    background-color: #e6f9ee;
    color: #1bae73;
  }
  
  .tag-red {
    background-color: #fdeaea;
    color: #e34b4b;
  }
  
  .tag-yellow {
    background-color: #fff7e1;
    color: #e6a100;
  }
  
  /* 金额信息 */
  
  .amount-row,
  .amount-total-row {
    flex-direction: row;
    display: flex;
    justify-content: space-between;
    margin-top: 10rpx;
  }
  
  .amount-label {
    font-size: 24rpx;
    color: #666;
  }
  
  .amount-value {
    font-size: 24rpx;
    color: #333;
  }
  
  .amount-total-row {
    margin-top: 18rpx;
    padding-top: 12rpx;
    border-top: 1rpx solid #f0f0f0;
  }
  
  .amount-total-label {
    font-size: 26rpx;
    color: #333;
  }
  
  .amount-total-value {
    font-size: 30rpx;
    font-weight: 600;
    color: #111;
  }
  
  /* 普通信息行 */
  
  .info-row {
    flex-direction: row;
    display: flex;
    margin-top: 10rpx;
  }
  
  .info-label {
    width: 160rpx;
    font-size: 24rpx;
    color: #888;
  }
  
  .info-value {
    flex: 1;
    font-size: 24rpx;
    color: #333;
  }
  
  /* 商品清单 */
  
  .item-row {
    flex-direction: row;
    display: flex;
    margin-top: 18rpx;
  }
  
  .item-pic {
    width: 140rpx;
    height: 140rpx;
    border-radius: 12rpx;
    background-color: #f5f5f5;
    margin-right: 20rpx;
  }
  
  .item-main {
    flex: 1;
    justify-content: space-between;
    display: flex;
    flex-direction: column;
  }
  
  .item-name {
    font-size: 26rpx;
    color: #333;
    margin-bottom: 4rpx;
  }
  
  .item-sku {
    font-size: 22rpx;
    color: #999;
  }
  
  .item-bottom {
    flex-direction: row;
    display: flex;
    justify-content: space-between;
    margin-top: 10rpx;
  }
  
  .item-price {
    font-size: 26rpx;
    color: #111;
  }
  
  .item-qty {
    font-size: 24rpx;
    color: #666;
  }
  
  /* 备注 */
  
  .note-row {
    margin-top: 10rpx;
  }
  
  .note-label {
    font-size: 24rpx;
    color: #888;
  }
  
  .note-text {
    margin-top: 4rpx;
    font-size: 24rpx;
    color: #333;
    line-height: 1.6;
  }
  
  /* 空状态 */
  
  .empty-wrapper {
    margin-top: 100rpx;
    align-items: center;
    display: flex;
    flex-direction: column;
  }
  
  .empty-text {
    font-size: 24rpx;
    color: #aaa;
    margin-bottom: 24rpx;
  }
  
  .empty-btn {
    padding: 10rpx 40rpx;
  }
  