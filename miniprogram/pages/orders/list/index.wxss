/* pages/orders/list/index.wxss */

.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部 Tabs */
.tabs {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 18rpx 0;
  background-color: #ffffff;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.04);
}

.tab-item {
  font-size: 28rpx;
  color: #666666;
}

.tab-item.active {
  color: #00c17b; /* 接近 Ueeshop 绿色 */
  font-weight: 600;
}

/* 搜索栏 */
.search-bar {
  margin: 16rpx 24rpx;
  padding: 0 24rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
}

.search-clear {
  font-size: 32rpx;
  color: #cccccc;
  padding-left: 16rpx;
}

/* 列表区域 */
.list-scroll {
  flex: 1;
  padding: 0 24rpx 24rpx;
  box-sizing: border-box;
}

.empty {
  margin-top: 120rpx;
  text-align: center;
  color: #999999;
  font-size: 26rpx;
}

/* 订单卡片 */
.order-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 24rpx 20rpx;
  margin-top: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.row-id {
  margin-bottom: 8rpx;
}

.order-id {
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
}

.row-amount {
  margin-bottom: 8rpx;
}

.amount-text {
  font-size: 32rpx;
  color: #e53935; /* 红色金额 */
  font-weight: 600;
}

.row-email {
  margin-bottom: 12rpx;
}

.email-text {
  font-size: 24rpx;
  color: #999999;
}

/* 状态标签行 */
.row-tags {
  justify-content: flex-start;
}

.tag {
  padding: 6rpx 22rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  margin-right: 16rpx;
}

/* 红/绿标签 */
.tag-red {
  background-color: #ffe5e5;
  color: #e53935;
}

.tag-green {
  background-color: #e4f9ef;
  color: #00a766;
}

.list-footer {
  text-align: center;
  color: #999999;
  font-size: 24rpx;
  padding: 20rpx 0;
}
