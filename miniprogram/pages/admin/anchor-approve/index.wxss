.page {
  padding: 16rpx 24rpx 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.tips {
  margin-top: 40rpx;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.row {
  display: flex;
  flex-direction: row;
  margin-bottom: 8rpx;
}

.label {
  width: 150rpx;
  color: #888;
  font-size: 26rpx;
}

.value {
  flex: 1;
  color: #333;
  font-size: 26rpx;
}

.remark-row .value {
  white-space: normal;
}

.btn-row {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.btn {
  margin-left: 16rpx;
}

.btn.reject {
  background-color: #f5f5f5;
  color: #666;
}

.btn.approve {
  background-color: #07c160;
  color: #fff;
}
