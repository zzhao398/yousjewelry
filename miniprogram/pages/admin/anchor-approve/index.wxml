<view class="page">
  <view class="page-title">主播认证审核</view>

  <view wx:if="{{loading}}" class="tips">加载中...</view>
  <view wx:elif="{{!list.length}}" class="tips">当前没有待审核的主播</view>

  <block wx:for="{{list}}" wx:key="_id">
    <view class="card">
      <view class="row">
        <text class="label">姓名：</text>
        <text class="value">{{item.realName || item.displayName}}</text>
      </view>
      <view class="row">
        <text class="label">登录账号：</text>
        <text class="value">{{item.loginAccount}}</text>
      </view>
      <view class="row">
        <text class="label">手机号：</text>
        <text class="value">{{item.phone || '-'}}</text>
      </view>
      <view class="row">
        <text class="label">邮箱：</text>
        <text class="value">{{item.email || '-'}}</text>
      </view>
      <view class="row">
        <text class="label">平台：</text>
        <text class="value">{{item.platform || '-'}}</text>
      </view>
      <view class="row">
        <text class="label">账号ID：</text>
        <text class="value">{{item.accountId || '-'}}</text>
      </view>
      <view class="row">
        <text class="label">申请角色：</text>
        <text class="value">{{item.requestedRole || 'anchor'}}</text>
      </view>
      <view class="row remark-row" wx:if="{{item.remark}}">
        <text class="label">备注：</text>
        <text class="value">{{item.remark}}</text>
      </view>

      <view class="btn-row">
        <button
          class="btn reject"
          data-id="{{item._id}}"
          bindtap="onRejectTap"
          size="mini"
        >
          拒绝
        </button>
        <button
          class="btn approve"
          data-id="{{item._id}}"
          bindtap="onApproveTap"
          size="mini"
        >
          通过
        </button>
      </view>
    </view>
  </block>
</view>
