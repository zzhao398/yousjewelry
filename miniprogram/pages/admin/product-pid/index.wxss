/* miniprogram/pages/admin/product-pid/index.wxss */

.page {
  min-height: 100vh;
  background: #f5f6f7;
  padding: 28rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #222;
}

.btn {
  background: #00b578;
  color: #fff;
  font-size: 26rpx;
  padding: 10rpx 22rpx;
  border-radius: 16rpx;
  line-height: 1.2;
}

.sub {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #888;
}

.search {
  margin-top: 18rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 14rpx 16rpx;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
}

.clear {
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  color: #999;
  font-size: 34rpx;
}

.table {
  margin-top: 18rpx;
  background: #fff;
  border-radius: 18rpx;
  overflow: hidden;
}

.tr {
  display: flex;
  padding: 18rpx 16rpx;
  border-bottom: 1rpx solid #f1f1f1;
}

.tr:last-child {
  border-bottom: 0;
}

.th {
  background: #fafafa;
}

.td {
  font-size: 26rpx;
  color: #333;
}

.td.name {
  flex: 1;
  padding-right: 12rpx;
}

.td.pid {
  width: 180rpx;
  text-align: right;
  color: #666;
  font-family: monospace;
}

.empty {
  margin-top: 26rpx;
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 40rpx 0;
}
