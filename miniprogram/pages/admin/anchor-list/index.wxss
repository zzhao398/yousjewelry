.page {
  padding: 16rpx 24rpx 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.tips {
  margin-top: 40rpx;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.row {
  display: flex;
  flex-direction: row;
  margin-bottom: 8rpx;
}

.row.multi {
  align-items: flex-start;
}

.label {
  width: 170rpx;
  color: #888;
  font-size: 26rpx;
}

.value {
  flex: 1;
  color: #333;
  font-size: 26rpx;
}

.value.strong {
  font-weight: 600;
}

.input {
  flex: 1;
  min-height: 60rpx;
  padding: 8rpx 12rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.hint {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999;
}
